<ContainerBX>:

    id: calculator

    display: entry
    input: input_text
    output: output_text
    orientation: 'vertical'

    MDNavigationLayout:

        ScreenManager:
            id: screen_manager
            Screen:
                name: "calculator_1"
                BoxLayout:
                    orientation:"vertical"
                    BoxLayout:
                        size_hint:1,.68
                        padding: 25,25,25,25
                        MDTextField:
                            theme_text_color: "Secondary"
                            multiline: False
                            id: entry
                            font_style: "H1"
                            size_hint: 1, 1
                            font_size: 50
                            halign: "right"
                            multiline: "True"



                            color_mode: 'custom'
                            line_color_focus: 1, 1, 1, .5




                    BoxLayout:
                        size_hint:1,1
                        GridLayout:
                            padding: 25,25,25,6
                            spacing:4
                            cols: 4
                            size_hint: 1, 1
                            MDRaisedButton:
                                text:"7"
                                size_hint: 1,1
                                font_size: 22

                                on_release:
                                    calculator.add_numbers(self.text,)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"8"
                                font_size: 22
                                id: button_8
                                on_release:
                                    calculator.add_numbers(self.text,)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"9"
                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text,)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"*"
                                font_size: 22

                                on_release:
                                    calculator.add_numbers(self.text,)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"4"
                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text,)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"5"
                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text,)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"6"
                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text,)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"-"
                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text,)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"1"
                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text,)
                            MDRaisedButton:

                                size_hint: 1,1
                                text:"2"
                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text,)
                            MDRaisedButton:

                                size_hint: 1,1
                                text:"3"

                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"+"
                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"."
                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"0"
                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text,)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"="
                                font_size: 22
                                on_release:
                                    calculator.main_operation(entry.text,)
                            MDRaisedButton:
                                size_hint: 1,1
                                text:"/"
                                font_size: 22
                                on_release:
                                    calculator.add_numbers(self.text,)
                    GridLayout:
                        padding: 25,0,25,6
                        spacing:4
                        cols: 2
                        size_hint: 1, .3



                        MDRaisedButton:
                            size_hint: 1,1
                            text: "<"
                            font_size: 25
                            on_release:

                                calculator.add_numbers("",y = 0)
                        MDRaisedButton:
                            size_hint: 1,1
                            text: "C"
                            font_size: 25
                            on_release:
                                calculator.main_operation(self.text, x = 1)
                                calculator.add_numbers(" ",x = 0)


            Screen:
                name: "calculator_2"

                BoxLayout
                    size_hint: 1,1
                    orientation: "vertical"
                    BoxLayout
                        orientation: "vertical"
                        size_hint: 1,.2
                        MDLabel:
                            theme_text_color: "Secondary"
                            halign: "center"
                            text: "From"
                    BoxLayout
                        size_hint: 1, .6
                        orientation: 'horizontal'
                        MDCheckbox:
                            id: cbxTo
                            selected_color: .7,.6,.84,1
                            group: 'groupTo'



                        MDCheckbox:
                            id: cbyTo
                            selected_color: .7,.6,.84,1
                            group: 'groupTo'



                        MDCheckbox:
                            id: cbTo
                            selected_color: .7,.6,.84,1
                            group: 'groupTo'
                            active: True

                        MDCheckbox:
                            id: cbzTo
                            selected_color: .7,.6,.84,1
                            group: 'groupTo'


                    BoxLayout
                        orientation: "horizontal"
                        size_hint: 1, .4
                        Label:
                            theme_text_color: "Secondary"
                            pos_hint: {'center_x': 1, 'center_y': .829}

                            text:"2"

                        Label:
                            theme_text_color: "Secondary"
                            pos_hint: {'center_x': 1, 'center_y': .829}
                            text:"8"

                        Label:
                            theme_text_color: "Secondary"
                            pos_hint: {'center_x': 1, 'center_y': .829}
                            text:"10"

                        Label:
                            theme_text_color: "Secondary"

                            pos_hint: {'center_x': 1, 'center_y': .829}
                            text:"16"
                    BoxLayout
                        size_hint: 1, .4
                        orientation: 'vertical'
                        MDTextField:             ###############################################################

                            id: input_text
                            halign: "center"
                            size_hint: 1,1
                            multiline: True
                            text: "101019"
                            pos_hint: {'center_x': .5, 'center_y': .5}
                    BoxLayout
                        orientation: "vertical"
                        size_hint: 1,.1
                        MDLabel:
                            theme_text_color: "Secondary"

                            halign: "center"
                            text: "To"

                    BoxLayout
                        size_hint: 1, .4
                        orientation: 'horizontal'

                        MDCheckbox:
                            id: cbx
                            selected_color: .7,.6,.84,1
                            group: 'group2'



                        MDCheckbox:
                            id: cby
                            selected_color: .7,.6,.84,1
                            group: 'group2'

                        MDCheckbox:
                            id: cb
                            selected_color: .7,.6,.84,1
                            group: 'group2'



                        MDCheckbox:
                            id: cbz
                            selected_color: .7,.6,.84,1
                            group: 'group2'
                            active: True


                    BoxLayout
                        orientation: "horizontal"
                        size_hint: 1, .4
                        Label:
                            theme_text_color: "Secondary"
                            pos_hint: {'center_x': 1, 'center_y': .829}

                            text:"2"

                        Label:
                            theme_text_color: "Secondary"
                            pos_hint: {'center_x': 1, 'center_y': .829}
                            text:"8"

                        Label:
                            theme_text_color: "Secondary"
                            pos_hint: {'center_x': 1, 'center_y': .829}
                            text:"10"

                        Label:
                            theme_text_color: "Secondary"

                            pos_hint: {'center_x': 1, 'center_y': .829}
                            text:"16"

                    BoxLayout
                        size_hint: 1,.5
                        MDRaisedButton:
                            text: "Result"
                            size_hint: 1, .45
                            pos_hint: {"top":1,"right":1}
                            on_release:
                                calculator.metricsAss(
                                Bin = cbx.active,
                                Octal = cby.active,
                                default = cb.active,
                                Hex = cbz.active,
                                BinTo = cbxTo.active,
                                OctalTo = cbyTo.active,
                                defaultTo = cbTo.active,
                                HexTo = cbzTo.active
                                )

                    BoxLayout
                        orientation: "vertical"
                        size_hint: 1, .4
                        MDTextField:
                            halign: "center"
                            readonly: True
                            id: output_text
                            size_hint: 1,None
                            multiline: True
                            text:




        MDNavigationDrawer:
            FloatLayout:

                MDRaisedButton:
                    pos_hint: {"x":1,"y":1,"top":.95,"bottom":1,"left":.9,"right":.9}
                    size_hint: .80,.08
                    font_size: 25
                    text:"Calculator"
                    on_release:
                        screen_manager.current = "calculator_1"

                MDRaisedButton:
                    pos_hint: {"x":.1,"y":.1,"top":.82,"bottom":.1,"left":.3,"right":.9}
                    size_hint: .80,.08
                    font_size: 25
                    text:"Notation scale"
                    on_release:
                        screen_manager.current = "calculator_2"



